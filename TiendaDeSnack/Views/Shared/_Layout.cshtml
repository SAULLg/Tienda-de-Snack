<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SNACK JR&SP</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaDeSnack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <header class="navbar-container">
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark box-shadow">
            <div class="container-fluid">

                @{
                    // detectar rol en sesión
                    var rol = Context.Session.GetString("Rol");
                    var esAdmin = string.Equals(rol, "Admin", StringComparison.OrdinalIgnoreCase);
                }

                <!-- Logo -->
                @if (esAdmin)
                {
                    <a class="navbar-brand-logo" asp-controller="Home" asp-action="Panel">
                        <img src="~/images/logo.jpg" alt="SNACK JR&SP Logo" class="logo">
                    </a>
                }
                else
                {
                    <a class="navbar-brand-logo" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.jpg" alt="SNACK JR&SP Logo" class="logo">
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 nav-links-custom">
                        @if (esAdmin)
                        {
                            <!-- Menú para ADMIN -->
                            <li class="nav-item">
                                <a class="nav-link text-light active-link" asp-controller="Home" asp-action="Panel">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Panel" asp-route-tab="Productos">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Panel" asp-route-tab="Empleados">Empleados</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Panel" asp-route-tab="Pedidos">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Panel" asp-route-tab="Repartidores">Repartidores</a>
                            </li>
                        }
                        else
                        {
                            <!-- Menú normal (cliente) -->
                            <li class="nav-item">
                                <a class="nav-link text-light active-link" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Menu">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Pedidos">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Resenas">Reseñas</a>
                            </li>
                        }
                    </ul>

                    <div class="right-nav-icons-group d-flex align-items-center">
                        <div class="search-bar-container">
                            <input type="text" class="search-input" placeholder="Buscar..." />
                            <button type="button" class="search-button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>

                        @{
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        }

                        @if (currentAction != "Resenas")
                        {
                            <a href="#" class="nav-icon-link cart-icon-lg"><i class="fas fa-shopping-cart"></i></a>
                            <a href="#" class="nav-icon-link profile-icon-lg"><i class="fas fa-user-circle"></i></a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SNACK JR&SP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
