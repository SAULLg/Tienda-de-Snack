<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SNACK JR&SP</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaDeSnack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <header class="navbar-container">
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark box-shadow">
            <div class="container-fluid">

                @{
                    // Detectar rol y ruta actual
                    var rol = Context.Session.GetString("Rol");
                    var esAdmin = string.Equals(rol, "Admin", StringComparison.OrdinalIgnoreCase);

                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                    var tab = Context.Request.Query["tab"].ToString();

                    // Lógica de pestaña activa (admin)
                    bool activeInicio = esAdmin && currentController == "Home" && currentAction == "Panel" && string.IsNullOrEmpty(tab);
                    bool activeProductos = esAdmin && ((currentController == "AdminProductos" && currentAction == "Index")
                    || (currentController == "Home" && currentAction == "Panel" && tab == "Productos"));
                    bool activeEmpleados = esAdmin && (currentController == "Home" && currentAction == "Panel" && tab == "Empleados");
                    bool activePedidos = esAdmin && (currentController == "Home" && currentAction == "Panel" && tab == "Pedidos");
                    bool activeRepartidores = esAdmin && (currentController == "Home" && currentAction == "Panel" && tab == "Repartidores");
                }

                @if (esAdmin)
                {
                    <a class="navbar-brand-logo" href="@Url.Action("Panel", "Home")">
                        <img src="~/images/logo.jpg" alt="SNACK JR&SP Logo" class="logo">
                    </a>
                }
                else
                {
                    <a class="navbar-brand-logo" href="@Url.Action("Index", "Home")">
                        <img src="~/images/logo.jpg" alt="SNACK JR&SP Logo" class="logo">
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 nav-links-custom">
                        @if (esAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light @(activeInicio ? "active-link" : "")"
                                   href="@Url.Action("Panel", "Home")">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(activeProductos ? "active-link" : "")"
                                   href="@Url.Action("Index", "AdminProductos")">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(activeEmpleados ? "active-link" : "")"
                                   href="@Url.Action("Panel", "Home", new { tab = "Empleados" })">Empleados</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(activePedidos ? "active-link" : "")"
                                   href="@Url.Action("Panel", "Home", new { tab = "Pedidos" })">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(activeRepartidores ? "active-link" : "")"
                                   href="@Url.Action("Panel", "Home", new { tab = "Repartidores" })">Repartidores</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light @(currentController == "Home" && currentAction == "Index" ? "active-link" : "")"
                                   href="@Url.Action("Index", "Home")">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(currentController == "Home" && currentAction == "Menu" ? "active-link" : "")"
                                   href="@Url.Action("Menu", "Home")">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(currentController == "Home" && currentAction == "Pedidos" ? "active-link" : "")"
                                   href="@Url.Action("Pedidos", "Home")">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @(currentController == "Home" && currentAction == "Resenas" ? "active-link" : "")"
                                   href="@Url.Action("Resenas", "Home")">Reseñas</a>
                            </li>
                        }
                    </ul>

                    <div class="right-nav-icons-group d-flex align-items-center">
                        <div class="search-bar-container">
                            <input type="text" class="search-input" placeholder="Buscar..." />
                            <button type="button" class="search-button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>

                        @* Render cart and profile icons except on Resenas page *@
                        @if (currentAction != "Resenas")
                        {
                            <a class="nav-icon-link cart-icon-lg"
                               data-bs-toggle="offcanvas"
                               data-bs-target="#offcanvasCarrito"
                               aria-controls="#offcanvasCarrito">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                            <a class="nav-icon-link profile-icon-lg" href="@Url.Action("Login", "Home")">
                                <i class="fas fa-user-circle"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SNACK JR&SP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasCarrito" aria-labelledby="offcanvasCarritoLabel">
        <div class="offcanvas-header bg-dark text-white">
            <h5 class="offcanvas-title" id="offcanvasCarritoLabel"><i class="fas fa-shopping-cart"></i> Tu Carrito</h5>
            <button type="button" class="btn-close btn-close-white text-reset" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column" id="carrito-content-container">

            <div id="carrito-items-list" class="flex-grow-1 overflow-auto mb-3">
                <p class="text-center text-muted mt-5">Carrito vacío.</p>
            </div>

            <div class="border-top pt-3">
                <div class="d-flex justify-content-between fw-bold mb-3">
                    <span>Subtotal:</span>
                    <span id="carrito-subtotal">$0.00</span>
                </div>
                <a class="btn btn-warning w-100 fw-bold" href="@Url.Action("Checkout", "Home")">Proceder al Pago</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>