@{
    ViewData["Title"] = "Panel de administración";
    var usuario = Context.Session.GetString("Usuario");
    var tab = (ViewBag.Tab as string ?? "Productos").ToLower(); // productos | empleados | pedidos | repartidores
}

<!-- ========= HERO (idéntico al Inicio) ========= -->
<div class="home-page-content">
    <div class="hero-section">
        <div class="hero-text-container">
            <h1 class="snack-title">SNACK JR&SP</h1>
            <p style="color:#FFD700; font-weight:600; font-size:1.3em; margin-top:25px;">
                Hola, @usuario
            </p>
        </div>

        <div class="snack-image-circle"></div>

        <div class="contact-info-panel">
            <p><i class="fab fa-facebook-f icon-facebook"></i> SNACK JR&SP</p>
            <p><i class="fab fa-whatsapp icon-whatsapp"></i> 686 316 0010</p>
        </div>
    </div>
</div>

<!-- ========= CONTENIDO SEGÚN PESTAÑA ========= -->
<div class="container" style="margin-top: 24px; margin-bottom: 48px;">

    @* ---------- Productos ---------- *@
    @if (tab == "productos")
    {
        <h2 class="text-center" style="color:#FFD700;">Productos</h2>
        <p class="text-center text-light mb-3">Administra lo que aparecerá en el menú.</p>

        <div style="display:flex; justify-content:center; margin-bottom:20px;">
            <a class="btn btn-warning fw-bold" style="color:#000; border-radius:28px; padding:10px 18px;">Agregar producto</a>
        </div>

        <div class="product-grid">
            <div class="product-item">
                <div class="product-image-placeholder">
                    <img src="~/images/churros-locos.jpg" alt="Churros Locos" class="product-img">
                    <button class="add-to-cart-btn">Editar</button>
                </div>
                <h3 class="product-name">Churros Locos</h3>
                <p class="product-price">95.00</p>
            </div>

            <div class="product-item">
                <div class="product-image-placeholder">
                    <img src="~/images/fresas-con-crema.jpg" alt="Fresas con crema" class="product-img">
                    <button class="add-to-cart-btn">Editar</button>
                </div>
                <h3 class="product-name">Fresas con crema</h3>
                <p class="product-price">95.00</p>
            </div>

            <div class="product-item">
                <div class="product-image-placeholder">
                    <img src="~/images/tostielotes.jpg" alt="Tostielotes" class="product-img">
                    <button class="add-to-cart-btn">Editar</button>
                </div>
                <h3 class="product-name">Tostielotes</h3>
                <p class="product-price">130.00</p>
            </div>
        </div>
    }

    @* ---------- Empleados ---------- *@
    else if (tab == "empleados")
    {
        <h2 class="text-center" style="color:#FFD700;">Empleados</h2>
        <p class="text-center text-light mb-3">Alta, baja y edición de personal (incluye Admin/Repartidores).</p>

        <div class="table-responsive" style="background:#000; border:2px solid #FFD700; border-radius:12px;">
            <table class="table table-dark table-striped mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Tipo</th>
                        <th style="width:160px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Saul García</td>
                        <td>SaulG</td>
                        <td>Admin</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Editar</button>
                            <button class="btn btn-sm btn-secondary">Desactivar</button>
                        </td>
                    </tr>
                    <tr>
                        <td>María Pérez</td>
                        <td>mperez</td>
                        <td>Empleado</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Editar</button>
                            <button class="btn btn-sm btn-secondary">Desactivar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    @* ---------- Pedidos ---------- *@
    else if (tab == "pedidos")
    {
        <h2 class="text-center" style="color:#FFD700;">Pedidos</h2>
        <p class="text-center text-light mb-3">Revisa y administra pedidos en curso.</p>

        <div class="table-responsive" style="background:#000; border:2px solid #FFD700; border-radius:12px;">
            <table class="table table-dark table-striped mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cliente</th>
                        <th>Estado</th>
                        <th>Total</th>
                        <th style="width:160px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>000123</td>
                        <td>SoniaO</td>
                        <td>Preparando</td>
                        <td>$225.00</td>
                        <td>
                            <button class="btn btn-sm btn-warning">Ver</button>
                            <button class="btn btn-sm btn-secondary">Asignar repartidor</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    @* ---------- Repartidores ---------- *@
    else if (tab == "repartidores")
    {
        <h2 class="text-center" style="color:#FFD700;">Repartidores</h2>
        <p class="text-center text-light mb-3">Disponibilidad y estado de entregas.</p>

        <div class="table-responsive" style="background:#000; border:2px solid #FFD700; border-radius:12px;">
            <table class="table table-dark table-striped mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>En ruta</th>
                        <th>Disponibilidad</th>
                        <th style="width:120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Juan López</td>
                        <td>juanr</td>
                        <td>2</td>
                        <td>Libre</td>
                        <td><button class="btn btn-sm btn-warning">Ver</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>
