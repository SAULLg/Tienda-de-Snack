<style>
    /* Estilos específicos para la página de Menú que pueden sobrescribir el sitio.css */
    body {
        background-color: #f8f8f8; /* Fondo blanco para el cuerpo */
    }

    .main-content-wrapper {
        background-color: #f8f8f8; /* Asegura que el wrapper también sea blanco */
    }

    .menu-page-container {
        padding-top: 100px; /* Espacio para la barra de navegación fija */
        min-height: calc(100vh - 100px); /* Ajusta la altura para que el footer no suba */
        background-color: #f8f8f8; /* Fondo de la página de menú */
    }

    .menu-title {
        font-size: 2.5em;
        font-weight: bold;
        color: #000 !important; /* Título negro */
        margin-bottom: 10px;
    }

    .menu-subtitle {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 40px;
    }
</style>